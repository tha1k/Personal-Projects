<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewArea1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#6750A3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editAreaStart"
        android:layout_width="328dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Enter start date (dd/mm/yyyy)"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArea2"
        app:layout_constraintVertical_bias="0.019" />

    <EditText
        android:id="@+id/editAreaEnd"
        android:layout_width="328dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter end date (dd/mm/yyyy)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAreaStart" />

    <Button
        android:id="@+id/buttonAreaSearch"
        android:layout_width="108dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAreaEnd"
        app:layout_constraintVertical_bias="0.401" />

    <TextView
        android:id="@+id/textViewArea2"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="56dp"
        android:text="Bookings per area"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArea1" />

    <TextView
        android:id="@+id/textAreaReplace"
        android:layout_width="387dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewArea3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArea2"
        app:layout_constraintVertical_bias="0.947" />

    <TextView
        android:id="@+id/textViewArea3"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#6750A3"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>