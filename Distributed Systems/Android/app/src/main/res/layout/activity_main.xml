<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMain1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#6750A3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewMain2"
        android:layout_width="176dp"
        android:layout_height="31dp"
        android:layout_marginTop="124dp"
        android:text="Choose a mode"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMain1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonManager"
        android:layout_width="248dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Manager mode"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonClient"
        android:layout_width="248dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="216dp"
        android:textSize="20dp"
        android:text="Client mode"
        app:layout_constraintBottom_toTopOf="@+id/textViewMain3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewMain3"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#6750A3"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>