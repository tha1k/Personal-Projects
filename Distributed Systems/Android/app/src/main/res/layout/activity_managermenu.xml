<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewManager1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#6750A3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewManager2"
        android:layout_width="192dp"
        android:layout_height="31dp"
        android:layout_marginBottom="52dp"
        android:text="Choose a service"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddAvailability"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewManager1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonAddAvailability"
        android:layout_width="248dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Add availability to room"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonShowBookings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonShowBookings"
        android:layout_width="248dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Show room bookings"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonShowBookingsPerArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonShowBookingsPerArea"
        android:layout_width="248dp"
        android:layout_height="76dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:text="Show bookings per area"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewManager3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewManager3"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#6750A3"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>